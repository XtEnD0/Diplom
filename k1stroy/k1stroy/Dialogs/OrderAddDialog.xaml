<Window x:Class="k1stroy.Dialogs.OrderAddDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:k1stroy.Dialogs"
        mc:Ignorable="d" WindowStyle="None"
        WindowStartupLocation="CenterOwner"
        Title="OrderAddDialog" Height="750" Width="600">
    <Grid>
        <Border BorderBrush="#19B2DD" 
            BorderThickness="3"
            Margin="5">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

                <TextBlock Text="Продукт:" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>
                <ComboBox x:Name="ProductCB" VerticalAlignment="Center" HorizontalAlignment="Center" Height="25"
                          Width="300" Margin="0,10,0,0" DisplayMemberPath="ProductName"></ComboBox>

                <TextBlock Text="Создатель заказа:" VerticalAlignment="Center" HorizontalAlignment="Center"
                           Margin="0,10,0,0"></TextBlock>
                <ComboBox x:Name="CustomerCB" VerticalAlignment="Center" HorizontalAlignment="Center"
                          Width="300" Margin="0,10,0,0" Height="25">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock>
                                <TextBlock.Text>
                                    <MultiBinding StringFormat="{}{0} {1} {2}">
                                        <Binding Path="Surname"></Binding>
                                        <Binding Path="Firstname"></Binding>
                                        <Binding Path="Patronymic"></Binding>
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <TextBlock Text="Статус заказа:" VerticalAlignment="Center" HorizontalAlignment="Center"
                           Margin="0,10,0,0"></TextBlock>
                <ComboBox x:Name="StatusCB" VerticalAlignment="Center" HorizontalAlignment="Center" Height="25"
                          Width="300" Margin="0,10,0,0" DisplayMemberPath="StatusName"></ComboBox>

                <TextBlock Text="Дата заказа:" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                <DatePicker x:Name="OrderDatePicker" 
                          Width="300"
                          Margin="0,10,0,0"
                          Height="25"
                          SelectedDateFormat="Short"/>

                <TextBlock Text="Дата выполнения:" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                <DatePicker x:Name="OrderCompleteDatePicker" 
                          Width="300" 
                          Height="25"
                          Margin="0,10,0,0"
                          SelectedDateFormat="Short"/>

                <TextBlock Text="Контактные данные клиента:" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                <TextBox Margin="0,10,0,0" Height="25"
                         x:Name="ContactDataTB"></TextBox>

                <TextBlock Text="Заказчик:" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                <TextBox Margin="0,10,0,0" Height="25"
                         x:Name="CustomerNameTB"></TextBox>

                <TextBlock Text="Отправление со склада:" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                <ComboBox Margin="0,10,0,0" Height="25" DisplayMemberPath="Storage"
                         x:Name="StorageFromTB"></ComboBox>

                <TextBlock Text="Адрес места назначения:" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                <TextBox Margin="0,10,0,0" Height="25"
                         x:Name="StorageToTB"></TextBox>

                <TextBlock Text="Количество:" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                <TextBox Margin="0,10,0,0" Height="25"
                         x:Name="CountTB"></TextBox>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">

                    <Button Content="Сохранить" Width="80" Height="30" Margin="25" Click="Save_Button_Click"
                            Cursor="Hand" BorderBrush="#0258B9" BorderThickness="2" Padding="1">

                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border CornerRadius="10" Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding Background}"
                                    BorderThickness="{TemplateBinding Background}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center">
                                    </ContentPresenter>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FF19B2DD"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    <Button Content="Отмена" Width="80" Height="30" Margin="25" Click="Cancel_Button_Click"
                            Cursor="Hand" BorderBrush="#0258B9" BorderThickness="2" Padding="1">

                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border CornerRadius="10" Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding Background}"
                                    BorderThickness="{TemplateBinding Background}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center">
                                    </ContentPresenter>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FF19B2DD"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>

                    </Button>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
